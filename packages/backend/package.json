{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "------------ pnpm ------------": "------------ pnpm ------------",
    "pnpm:add:package": "npx pnpm add source-map-support",
    "pnpm:install": "npx pnpm -r install --recursive",
    "----------- common -----------": "----------- common -----------",
    "prebuild": "rimraf dist",
    "build:tsc": "tsc -p .",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",

    "start:ms:investing": "ts-node -r tsconfig-paths/register ../../other/ms-investing/src/main.ts",
    "start:ms:notification": "ts-node -r tsconfig-paths/register ../../other/ms-notification/src/main.ts",
    "start:ms:notifier": "ts-node -r tsconfig-paths/register apps/notifier/app.ts",
    "start:keydb.ts": "ts-node -r tsconfig-paths/register ../../other/ms-notifier/src/keydb.ts",
    "crypto.coingecko.ts": "ts-node -r tsconfig-paths/register apps/notifier/src/crypto.coingecko.ts",
    "o.ts": "ts-node -r tsconfig-paths/register ../../other/ms-notifier/src/o.ts",
    "vault.ts": "ts-node -r tsconfig-paths/register ../../other/ms-notifier/src/vault.ts",
    "nats": "ts-node -r tsconfig-paths/register ../../other/ms-notification/src/nats.ts",
    "build": "nest build",
    "start": "nest start",
    "start:auto": "nest build & nest start"

  },
  "dependencies": {
    "rimraf": "4.1.2",
    "safe-stable-stringify": "4.1.2",

    "@nestjs/axios": "^0.1.0",
    "@nestjs/common": "^9.0.11",
    "@nestjs/core": "^9.0.11",
    "@nestjs/microservices": "^9.0.11",
    "@nestjs/platform-fastify": "^9.0.11",
    "@nestjs/throttler": "^3.1.0",
    "array-observer": "^1.0.4",
    "body-parser": "^1.20.1",
    "coingecko-api": "^1.0.10",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "external-editor": "^3.1.0",
    "extra-number": "^2.3.4",
    "fastify": "^4.13.0",
    "flat-cache": "^3.0.4",
    "investing-com-api": "^4.3.0",
    "object-observer": "^5.1.6",
    "on-change": "^4.0.2",
    "redis": "^4.5.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.6.0",
    "telegraf": "^4.10.0",
    "timestamp-nano": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "@types/node": "^18.13.0",


    "@nestjs/cli": "9.2.0",
    "@nestjs/schematics": "9.0.4",
    "@nestjs/swagger": "6.2.1",
    "jest": "^28.1.3",

    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4",

    "source-map-support": "^0.5.21"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
